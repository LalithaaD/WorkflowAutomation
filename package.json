{
  "name": "workflow-automation",
  "version": "1.0.0",
  "description": "A full-stack Workflow Automation web app similar to a mini-Zapier",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && ng serve",
    "client:build": "cd client && ng build",
    "install:all": "npm install && cd client && npm install",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "setup": "node setup.js",
    "seed": "node scripts/seed-database.js"
  },
  "keywords": ["workflow", "automation", "zapier", "angular", "nodejs"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.4",
    "axios": "^1.5.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
